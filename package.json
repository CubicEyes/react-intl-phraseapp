    "@types/react-dom": "^16.9.4",
    "@types/react-intl": "^2.3.5",
    "@types/react-test-renderer": "^16.9.1",
    "jest": "^24.9.0",
    "react": "^16.12.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.12.0",
    "react-intl": "^2.2.3",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^4.1.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "merge": ">=1.2.1"
  },
  "peerDependencies": {
    "react": ">= 15.5.4",
    "react-intl": ">= 2.2.3 < 3"
